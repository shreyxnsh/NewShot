<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FA8BD"
    tools:context=".OnboardingActivity">

    <LinearLayout
        android:id="@+id/cardLinear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_header"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/image" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appIcon"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppinsbold"
            android:text="NewShot"
            android:textAlignment="center"
            android:textColor="#333245"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@id/cardLinear">

        <TextView
            android:id="@+id/introText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to NewShot, your go-to app for the latest news and updates. Our app uses the NewsApi to provide you with the latest stories from around the world, covering a wide range of topics such as politics, business, sports, technology, and more. With NewShot, you'll never miss a breaking story again. Stay informed, stay ahead, and stay connected with NewShot. "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedBtn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            app:cornerRadius="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:elevation="25dp"
            android:textColor="@color/white"
            android:text="Get Started"
            android:fontFamily="@font/poppinsbold"
            android:textAllCaps="false"
            android:backgroundTint="#333245"
            />
    </LinearLayout>


</RelativeLayout>